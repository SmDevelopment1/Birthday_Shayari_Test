<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:background="#000"
    tools:context=".Main2Activity">


    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">


        <TextView
            android:background="@android:color/transparent"
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="13dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/scada"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textStyle="bold"
            android:text=" Subscribe! | SHAYARI WORLD | Follow Us! "
            android:textColor="#fff"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/follow"
            android:clickable="true"
            android:background="#000"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/insta_sr"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

        <ImageView
            android:id="@+id/youtube"
            android:clickable="true"
            android:background="#000"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/youtube"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />


    </RelativeLayout>




    <ScrollView
        android:layout_below="@+id/relative_layout"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        tools:context=".MainActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <GridLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnOrderPreserved="false"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:rowCount="5">

                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="#212121"
                    android:id="@+id/insta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">

                    <LinearLayout
                        android:background="@android:color/transparent"
                        android:padding="16dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/insta_caption" />

                        <TextView
                            android:fontFamily="sans-serif-black"
                            android:layout_marginTop="12dp"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:text="Captions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="#212121"
                    android:id="@+id/shayari"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">

                    <LinearLayout
                        android:background="@android:color/transparent"
                        android:padding="16dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/shayari_img"
                            android:layout_width="100dp"
                            android:layout_height="100dp" />

                        <TextView
                            android:fontFamily="sans-serif-black"
                            android:layout_marginTop="12dp"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:text=" Shayari's "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="#212121"
                    android:id="@+id/birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:clickable="true"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">

                    <LinearLayout
                        android:background="@android:color/transparent"
                        android:id="@+id/hard"
                        android:padding="16dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="88dp"
                            android:src="@drawable/birthday_img" />

                        <TextView
                            android:fontFamily="sans-serif-black"
                            android:layout_marginTop="12dp"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:text="Birthday "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="#212121"
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">

                    <LinearLayout
                        android:background="@android:color/transparent"
                        android:padding="16dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/gifts_img"
                            android:layout_width="100dp"
                            android:layout_height="100dp" />

                        <TextView
                            android:fontFamily="sans-serif-black"
                            android:layout_marginTop="12dp"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:text="Gifts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>


            <LinearLayout
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Most Popular Shayari"
                    android:textSize="20dp"
                    android:textColor="#FAFAFA"
                    android:textStyle="bold"/>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">



                        <androidx.cardview.widget.CardView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp">


                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:orientation="vertical">


                                <ImageView
                                    android:id="@+id/attitude_img"
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:clickable="true"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/attitude_img" />


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp">


                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:orientation="vertical">


                                <ImageView
                                    android:id="@+id/love_img"
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:clickable="true"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/love_img" />


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp">


                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:orientation="vertical">


                                <ImageView
                                    android:id="@+id/morning_img"
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:clickable="true"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/good_morning_img" />


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp">


                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:orientation="vertical">


                                <ImageView
                                    android:id="@+id/night_img"
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:clickable="true"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/good_night_img" />


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>



                    </LinearLayout>
                </HorizontalScrollView>


            </LinearLayout>

            <RelativeLayout
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Popular Insta-Captions"
                    android:textSize="20dp"
                    android:textColor="#FAFAFA"
                    android:textStyle="bold"/>

                <HorizontalScrollView
                    android:layout_below="@id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <androidx.cardview.widget.CardView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp">


                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:orientation="vertical">


                                <ImageView
                                    android:id="@+id/missyou"
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:clickable="true"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/miss" />


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp">


                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:orientation="vertical">


                                <ImageView
                                    android:id="@+id/fitness"
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:clickable="true"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/fitness" />


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp">


                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:orientation="vertical">


                                <ImageView
                                    android:id="@+id/beard"
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:clickable="true"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/beard" />


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp">


                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:orientation="vertical">


                                <ImageView
                                    android:id="@+id/selfie"
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:clickable="true"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/selfie" />


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp">


                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:orientation="vertical">


                                <ImageView
                                    android:id="@+id/happy"
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:clickable="true"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/happy" />


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp">


                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:orientation="vertical">


                                <ImageView
                                    android:id="@+id/cool"
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:clickable="true"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/cool" />


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp">


                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:orientation="vertical">


                                <ImageView
                                    android:id="@+id/foodie"
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:clickable="true"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/foodie"
                                    android:focusable="true" />


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>



                    </LinearLayout>
                </HorizontalScrollView>


            </RelativeLayout>







            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#212121"
                android:id="@+id/facts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">



                <LinearLayout
                    android:background="@android:color/transparent"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/motivation_img"
                        android:contentDescription="TODO" />


                    <TextView
                        android:layout_marginTop="12dp"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:text="Trending Motivational Quotes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>



        </LinearLayout>





    </ScrollView>
</RelativeLayout>

