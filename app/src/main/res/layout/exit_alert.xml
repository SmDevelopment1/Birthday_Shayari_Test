<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:theme="@style/insta"
    android:padding="20dp"
    >
    <LinearLayout
        android:background="#212121"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:theme="@style/insta"
        android:padding="20dp">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/thanks"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#C8C44DCA"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Thank You ! Visit Again !!"
        android:textSize="25dp"
        />

    <TextView
        android:fontFamily="@font/scada"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:gravity="center"
        android:text="Dear User ! Thank You and Hope you are enjoying our services. Do review and Rate Us on PlayStore.#GoodThingsForUs "
        android:textSize="20dp"
        />

</LinearLayout>
</ScrollView>