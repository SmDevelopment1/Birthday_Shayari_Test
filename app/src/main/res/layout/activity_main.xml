<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<LinearLayout
    android:id="@+id/lynew"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="5dp"
    android:background="@drawable/backbirthday"
    tools:context=".MainActivity">




    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lytxt"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="5dp"
        android:gravity="center"
        android:background="@color/skyblue">

        <TextView
            android:textAlignment="center"
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_alignEnd="@+id/lytxt"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_alignRight="@+id/lytxt" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/lytxt"
        android:id="@+id/ly"
        android:background="@color/silver"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="35.0dip"
            android:layout_height="35.0dip"
            android:layout_marginLeft="50.0dip"
            android:layout_marginTop="2.0dip"
            app:srcCompat="@drawable/back"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/share"
            android:layout_width="35.0dip"
            android:layout_height="35.0dip"
            android:layout_marginLeft="55.0dip"
            android:layout_marginTop="2.0dip"
            app:srcCompat="@drawable/sharebtn"
            android:clickable="true"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="35.0dip"
            android:layout_height="35.0dip"
            android:layout_marginLeft="55.0dip"
            android:layout_marginRight="50.0dip"
            android:layout_marginTop="2.0dip"
            app:srcCompat="@drawable/next"
            android:clickable="true"/>

    </LinearLayout>



    <Button
        android:id="@+id/more"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_btn"
        android:padding="10dp"
        android:text=" NEW BIRTHDAY SHAYARI "
        android:textColor="#742378"
        android:textSize="20sp"
        android:layout_alignBottom="@id/ly"
        android:textStyle="bold" />

    <Button
        android:id="@+id/gifts"
        android:layout_below="@+id/more"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/promote_round"
        android:padding="10dp"
        android:fontFamily="@font/scada"
        android:text="Suggest Gifts for me "
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/more"
        android:textStyle="bold" />


</LinearLayout>
    </ScrollView>







