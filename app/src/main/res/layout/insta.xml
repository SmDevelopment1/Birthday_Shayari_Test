<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_marginTop="1dp" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#000000">
    <androidx.cardview.widget.CardView  android:gravity="center" android:id="@+id/card1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="2dp" app:cardCornerRadius="10dp" app:cardElevation="8dp" android:background="#000000">
        <LinearLayout  android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout   android:background="#121212" android:orientation="horizontal" android:id="@+id/linear_layout" android:layout_width="match_parent" android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/img"
                    android:src="@drawable/birthday_img"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="0dp"
                    android:contentDescription="TODO" />

                <TextView  android:layout_gravity="center_vertical" android:fontFamily="@font/scada" android:layout_marginLeft="10dp" android:text="GOOGLE" android:textSize="18sp"  android:textColor="#FFFFFF"  android:gravity="center" android:id="@+id/data" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="15dp"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView android:layout_gravity="center" android:id="@+id/card2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/relative_layout" android:background="#161111" >
                <LinearLayout
                    android:background="@color/card"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                <ImageView android:id="@+id/mwhatsapp"  android:layout_width="35dp" android:layout_height="35dp" android:layout_marginLeft="50dp" android:layout_marginTop="2dp" android:src="@drawable/insta_sr" android:layout_below="@+id/card1" android:layout_alignLeft="@+id/card1"/>
                <ImageView android:id="@+id/share" android:layout_width="35dp" android:layout_height="33dp" android:layout_marginLeft="100dp" android:layout_marginTop="5dp" android:src="@drawable/sharebtn" android:layout_below="@+id/card1"
                    android:layout_marginStart="100dp"
                    android:contentDescription="TODO" />
                <ImageView android:id="@+id/mcopy" android:layout_width="25dp" android:layout_height="30dp" android:layout_marginLeft="110dp" android:layout_marginTop="5dp" android:src="@drawable/copy_txt"
                    android:layout_marginStart="105dp"
                    android:contentDescription="TODO" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
