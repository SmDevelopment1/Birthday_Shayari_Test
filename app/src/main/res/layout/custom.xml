<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_marginTop="1dp" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView android:gravity="center" android:id="@+id/card1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="2dp" app:cardCornerRadius="10dp" app:cardElevation="8dp">
        <LinearLayout android:background="#121212" android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:gravity="center" android:id="@+id/relative_layout" android:layout_width="wrap_content" android:layout_height="match_parent">
                <TextView android:fontFamily="@font/scada"   android:text="GOOGLE" android:textSize="16sp" android:textColor="#FFFFFF" android:gravity="center" android:id="@+id/data" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="15dp"/>
            </RelativeLayout>
            <androidx.cardview.widget.CardView android:id="@+id/card2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/relative_layout" app:cardBackgroundColor="@color/card">
                <ImageView android:id="@+id/mwhatsapp" android:layout_width="35dp" android:layout_height="35dp" android:layout_marginLeft="70dp" android:layout_marginTop="2dp" android:src="@drawable/whatsapp" android:layout_below="@+id/card1" android:layout_alignLeft="@+id/card1"/>
                <ImageView android:id="@+id/share" android:layout_width="35dp" android:layout_height="33dp" android:layout_marginLeft="180dp" android:layout_marginTop="5dp" android:src="@drawable/sharebtn" android:layout_below="@+id/card1"/>
                <ImageView android:id="@+id/mcopy" android:layout_width="25dp" android:layout_height="30dp" android:layout_marginLeft="310dp" android:layout_marginTop="5dp" android:src="@drawable/copy" android:layout_below="@+id/card1"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
